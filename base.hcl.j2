name = "{{ inventory_hostname }}"
region = "global"
datacenter = "kicadc"


enable_debug = false
disable_update_check = false

bind_addr = "0.0.0.0"
advertise {
    http = "{{ ansible_default_ipv4.address }}:4646"
    rpc = "{{ ansible_default_ipv4.address }}:4647"
    serf = "{{ ansible_default_ipv4.address }}:4648"
}
ports {
    http = 4646
    rpc = 4647
    serf = 4648
}

consul {
    # The address to the Consul agent
    address = "localhost:8500"
    ssl = false
    ca_file = ""
    cert_file = ""
    key_file = ""
    token = ""
    # The service name to the register the server and the client with Consul
    server_service_name = "nomad_servers"
    client_service_name = "nomad_clients"
    #tags = {}

    # Enables automatically registering the services.
    auto_advertise = true

    # Enabling the server and client to bootstrap using Consul
    server_auto_join = true
    client_auto_join = true
}

data_dir = "/var/lib/docker/nomad"

log_level = "INFO"
enable_syslog = true

leave_on_terminate = true
leave_on_interrupt = false

acl {
    enabled = false
    token_ttl = "30s"
    policy_ttl = "30s"
    replication_token = ""
}

vault {
    enable = false
    address = "0.0.0.0"
    allow_unauthenticated = true
    create_from_role = ""
    task_token_ttl = ""
    ca_file = ""
    ca_path = ""
    cert_file = ""
    key_file = ""
    tls_server_name = ""
    tls_skip_verify = false
    token = ""
    namespace = ""
}

